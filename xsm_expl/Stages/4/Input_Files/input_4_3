decl
	str option;
	int num1, num2, result;
enddecl

begin

	write("Add A");
	write("Sub S");
	write("Mul M");
	write("Div D");
	write("Enter Option");

	read(option);

	write("Enter 1st Number");
	read(num1);

	write("Enter 2nd Number");
	read(num2);

	if (option == "A") then
		write(num1 + num2);
	endif;

	if (option == "S") then
		write(num1 - num2);
	endif;

	if (option == "M") then
		write(num1 * num2);
	endif;

	if (option == "D") then
		write(num1 / num2);
	endif;

end;
